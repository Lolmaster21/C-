#include <iostream>
#include <cmath>
#include <vector>
using namespace std;

int reverse(int x);

int main() {

    int num;

    while (1) {

        cout << " Enter 3 digit number" << endl;
        cin >> num;

        reverse(num);

    }

}

int reverse(int x) {
    while (x > 0) {
        cout << x % 10;
        x = x / 10;

    }
    return 0;
}
